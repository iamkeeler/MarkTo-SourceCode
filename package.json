{
  "name": "mark-to-rtf",
  "version": "1.0.0",
  "description": "A lightweight macOS application for converting Markdown to RTF",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "dev": "electron . --dev",
    "test": "jest"
  },
  "keywords": ["markdown", "rtf", "converter", "macos", "electron"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "markdown-it": "^14.0.0",
    "clipboard": "^2.0.11",
    "codemirror": "^6.0.1",
    "@codemirror/lang-markdown": "^6.2.4",
    "@codemirror/theme-one-dark": "^6.1.2"
  },
  "build": {
    "appId": "com.yourcompany.mark-to-rtf",
    "productName": "MarkToRTF",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity"
    }
  }
}
